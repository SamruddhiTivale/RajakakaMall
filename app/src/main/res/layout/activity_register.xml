<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/welcome">

    <ImageView
        android:id="@+id/register_appLogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />

    <EditText
        android:id = "@+id/user_number"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below="@+id/register_appLogo"
        android:hint="Enter Your Name"
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textStyle="bold"
        android:inputType="number"
        />


    <EditText
        android:id = "@+id/register_mob_number"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/user_number"
        android:hint="Enter Mobile Number"
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textStyle="bold"
        android:inputType="number"
        />

    <EditText
        android:id = "@+id/register_password"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below="@id/register_mob_number"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/colorPrimary"
        android:hint="Enter your password"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/register_createaccountbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password"
        android:background="@drawable/buttons"
        android:layout_marginTop="15dp"
        android:text="Create a Account"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
</RelativeLayout>